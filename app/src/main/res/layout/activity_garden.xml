<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Garden"
    android:background="@color/bg">

    <Button
        android:id="@+id/gButton"
        android:layout_width="323dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/teal_200"
        android:elevation="20dp"
        android:text="@string/OnOff"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="322dp"
        android:layout_height="271dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/deyacolor"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="408dp"
            android:layout_height="304dp"
            android:background="@color/bg"
            app:cornerRadius="20dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/bg">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/deyacolor">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/Gauge1"
                            android:layout_width="225dp"
                            android:layout_height="223dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            app:cpb_background_progressbar_color="#D2486C7A"
                            app:cpb_background_progressbar_width="32dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="#FF03DAC5"
                            app:cpb_progressbar_width="20dp"
                            app:cpb_round_border="true"
                            app:cpb_start_angle="215"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.34" />

                        <TextView
                            android:id="@+id/gaugeText1"
                            android:layout_width="83dp"
                            android:layout_height="82dp"
                            android:textAlignment="center"
                            android:textColor="@color/teal_200"
                            android:textSize="45sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.371" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HUMIDITY"
                            android:textColor="@color/teal_200"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.541" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#193C42">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/deyacolor">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/Gauge2"
                            android:layout_width="225dp"
                            android:layout_height="223dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            app:cpb_background_progressbar_color="#D2486C7A"
                            app:cpb_background_progressbar_width="32dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="#FF03DAC5"
                            app:cpb_progressbar_width="20dp"
                            app:cpb_round_border="true"
                            app:cpb_start_angle="215"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.34" />

                        <TextView
                            android:id="@+id/gaugeText2"
                            android:layout_width="83dp"
                            android:layout_height="82dp"
                            android:textAlignment="center"
                            android:textColor="@color/teal_200"
                            android:textSize="45sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.371" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HUMIDITY"
                            android:textColor="@color/teal_200"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.541" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#193C42">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/deyacolor">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/Gauge3"
                            android:layout_width="225dp"
                            android:layout_height="223dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            app:cpb_background_progressbar_color="#D2486C7A"
                            app:cpb_background_progressbar_width="32dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="#FF03DAC5"
                            app:cpb_progressbar_width="20dp"
                            app:cpb_round_border="true"
                            app:cpb_start_angle="215"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.34" />

                        <TextView
                            android:id="@+id/gaugeText3"
                            android:layout_width="83dp"
                            android:layout_height="82dp"
                            android:textAlignment="center"
                            android:textColor="@color/teal_200"
                            android:textSize="45sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.371" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HUMIDITY"
                            android:textColor="@color/teal_200"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.541" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#193C42">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/deyacolor">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/Gauge4"
                            android:layout_width="225dp"
                            android:layout_height="223dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="100dp"
                            app:cpb_background_progressbar_color="#D2486C7A"
                            app:cpb_background_progressbar_width="32dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="#FF03DAC5"
                            app:cpb_progressbar_width="20dp"
                            app:cpb_round_border="true"
                            app:cpb_start_angle="215"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.34" />

                        <TextView
                            android:id="@+id/gaugeText4"
                            android:layout_width="83dp"
                            android:layout_height="82dp"
                            android:layout_marginRight="70dp"
                            android:textAlignment="center"
                            android:textColor="@color/teal_200"
                            android:textSize="45sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.371" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HUMIDITY"
                            android:layout_marginRight="65dp"
                            android:textColor="@color/teal_200"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.541" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/gText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#F6F2F2"
        android:text="@string/gText"
        android:textColor="#F1E8E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gButton"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.401" />

</androidx.constraintlayout.widget.ConstraintLayout>